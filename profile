export EDITOR=vim

alias ga="git add"
alias gb="git branch"
alias gco="git checkout"
alias gci="git commit"
alias gd.="git diff"
alias gd.c="git diff --cached"
alias gl="git log"
alias gr.="git rebase"
alias gr.a="git rebase --abort"
alias gr.c="git rebase --continue"
alias gr.i="git rebase --autosquash --interactive"
alias gs="git status"
